@{
    ViewData["Title"] = "Home Page";
}

<div class="w-50 mx-auto">
    @{
        for(int i = 0; i < ViewBag.Times; i++)
        {
            <h1>Current name: @ViewBag.PersonName</h1>
        }
    }

    <form method="post" asp-action="SubmitName" asp-controller="Home">
        <div class="form-group">
            <label for="Name">Name:</label>
            <input type="text" name="Name" class="form-control">
        </div>

        <div class="form-group">
            <label for="Times">Times:</label>
            <input type="number" name="Times" class="form-control">
        </div>

        <input type="submit" class="btn btn-lg btn-primary mx-auto m-3">
    </form>
</div>
